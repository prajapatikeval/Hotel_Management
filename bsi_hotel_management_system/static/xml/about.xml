<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="bsi_about_us_id" name="about">
        <t t-call="website.layout">
            
            <!-- Breadcrumb Section Begin -->
            <div class="breadcrumb-section">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="breadcrumb-text">
                                <h2>About Us</h2>
                                <div class="bt-option">
                                    <a href="/">Home</a>
